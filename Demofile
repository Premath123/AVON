pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {  
    stage('Install dependencies') {
      steps {
        bat 'npm install'
      }
    }
    stage('Test1') {
      parallel {
        stage('Static code analysis') {
            steps { 
            bat 'npm lint' 
            }
        }
      }
    }
	  stage('Build') {
      parallel {
        stage('Build') {
            steps { 
            bat 'npm build' 
            }
        }
      }
    } 
	  stage('Test') {
      parallel {
        stage('Test') {
            steps { 
            bat 'npm test' 
            }
        }
      }
    }   
  }
}
